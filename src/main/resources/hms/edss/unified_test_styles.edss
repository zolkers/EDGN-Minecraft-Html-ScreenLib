body {
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
}

.test-container {
    max-width: 1200px;
    margin: 0 auto;
    background-color: white;
    min-height: 100vh;
}

.main-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 20px;
}

.main-title {
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 15px;
    text-align: center;
}

.status-bar {
    display: flex;
    justify-content: space-around;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 10px;
}

.time-display, .status-display, .counter-display {
    font-size: 14px;
    background-color: rgba(255, 255, 255, 0.2);
    padding: 5px 10px;
    border-radius: 15px;
}

.test-content {
    padding: 30px;
}

.test-section {
    margin-bottom: 40px;
    border: 1px solid #dee2e6;
    border-radius: 8px;
    padding: 20px;
}

.section-title {
    font-size: 24px;
    font-weight: bold;
    color: #495057;
    margin-bottom: 15px;
    border-bottom: 2px solid #667eea;
    padding-bottom: 5px;
}

.section-info {
    color: #6c757d;
    margin-bottom: 20px;
    font-style: italic;
}

.test-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}

.test-item {
    border: 1px solid #e9ecef;
    border-radius: 6px;
    padding: 15px;
}

.item-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #343a40;
}

.large-virtual-list {
    height: 300px;
    border: 2px solid #dee2e6;
    border-radius: 4px;
    overflow-y: auto;
    background-color: #fafafa;
}

.small-virtual-list {
    height: 200px;
    border: 2px solid #dee2e6;
    border-radius: 4px;
    overflow-y: auto;
    background-color: #fafafa;
}

.large-item {
    padding: 8px 12px;
    border-bottom: 1px solid #e9ecef;
    background-color: white;
}

.large-item:hover {
    background-color: #e3f2fd;
}

.small-item {
    padding: 5px 12px;
    border-bottom: 1px solid #e9ecef;
    background-color: white;
    font-size: 14px;
}

.spacing-demo {
    border: 1px dashed #adb5bd;
    padding: 20px;
    background-color: #f8f9fa;
}

.dynamic-text {
    font-size: 18px;
    color: #28a745;
    font-weight: bold;
    margin-bottom: 20px;
    padding: 10px;
    background-color: #d4edda;
    border-radius: 4px;
}

.notifications-container {
    margin-top: 20px;
}

.notifications-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #495057;
}

.notifications-list {
    height: 150px;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    overflow-y: auto;
    background-color: #fff;
}

.notification {
    padding: 8px 12px;
    border-bottom: 1px solid #f8f9fa;
    background-color: #e7f3ff;
    font-size: 14px;
}

.test-footer {
    background-color: #343a40;
    color: white;
    padding: 20px;
    text-align: center;
}

.footer-text {
    font-size: 14px;
    opacity: 0.9;
}