body {
    width: 100vw;
    height: 100vh;
    background-color: #f5f5f5;
    margin: 0px;
    padding: 0px;
}

header {
    width: 100%;
    height: 60px;
    background-color: #2c3e50;
    padding: 10px 20px;
}

header div {
    height: 20px;
    color: white;
    margin: 5px 0px;
    padding: 5px 10px;
}

main {
    width: 100%;
    height: calc(100vh - 60px);
    padding: 20px;
    background-color: #ffffff;
}

#test-list {
    width: 100%;
    height: 100%;
    background-color: white;
    margin: 10px 0px;
}

.list-item {
    width: 100%;
    height: 45px;
    padding: 5px 10px;
    background-color: #ffffff;
}

.list-item button {
    width: 90px;
    height: 30px;
    margin: 0px 5px;
    padding: 5px 10px;
}

button.primary {
    background-color: #2196F3;
    color: white;
}

button.success {
    background-color: #4CAF50;
    color: white;
}

button.warning {
    background-color: #ff9800;
    color: white;
}

button.danger {
    background-color: #f44336;
    color: white;
}

button {
    background-color: #9E9E9E;
    color: white;
}