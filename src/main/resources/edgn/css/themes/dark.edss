body {
    background-color: #1a1a1a;
    padding: 0;
    margin: 0;
    width: 100vw;
    height: 100vh;
}

header {
    background-color: #2d2d2d;
    padding: 20px;
    margin-bottom: 20px;
    width: 100%;
    height: 80px;
}

main {
    padding: 0 20px;
    height: calc(100vh - 140px);
}

footer {
    background-color: #2d2d2d;
    padding: 15px 20px;
    color: #999999;
    width: 100%;
    height: 40px;
    position: fixed;
    bottom: 0;
}